---
import { SITE_DESCRIPTION, SITE_TITLE } from "../data/constants";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import lostImage from "../images/pexels-fausto-hernández-12276396.jpg";
---

<Layout title="404 - Page not found">
	<div
		class="mb-10 grid lg:min-h-full grid-cols-1 grid-rows-[1fr,auto,1fr] bg-white lg:grid-cols-[max(50%,36rem),1fr]"
	>
		<main
			class="mx-auto w-full max-w-7xl px-6 py-24 sm:py-32 lg:col-span-2 lg:col-start-1 lg:row-start-2 lg:px-8"
		>
			<div class="max-w-lg">
				<p class="text-2xl font-semibold leading-8 text-green-600">404</p>
				<h1
					class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl"
				>
					Lost but Not Alone: Finding Your Way Back Home
				</h1>
				<p class="mt-6 text-base leading-7 text-gray-600">
					Lost traveler, fear not. Though this path may seem uncertain, our
					faith guides us. Return to the sanctuary of truth by clicking home.
					The Shepherd awaits your return.
				</p>
				<div class="mt-10">
					<a href="/" class="text-sm font-semibold leading-7 text-green-600"
						><span aria-hidden="true">&larr;</span> Back to home</a
					>
				</div>
			</div>
		</main>
		<footer
			class="hidden lg:block self-end lg:col-span-2 lg:col-start-1 lg:row-start-3"
		>
			<div class="border-t border-green-100 bg-green-50">
				<div
					class="mx-auto flex w-full max-w-7xl items-center gap-x-4 px-6 text-sm sm leading-7 text-green-600 lg:px-8"
				>
					<p>Photo by</p>
					<a
						href="https://www.pexels.com/photo/people-hiking-the-mountain-forest-12276396/"
						target="_blank"
						rel="nofollow"
						class="italic underline">Fausto Hernández</a
					>
				</div>
			</div>
		</footer>
		<div
			class="hidden lg:relative lg:col-start-2 lg:row-start-1 lg:row-end-4 lg:block"
		>
			<Image
				src={lostImage}
				alt=""
				class="absolute inset-0 h-full w-full object-cover"
				width={1000}
				height={1000}
			/>
		</div>
	</div>
</Layout>
