import { getEntry } from "astro:content";

const { slug } = Astro.params;

if (slug === undefined) {
	throw new Error("Slug is required!");
}

const entry = await getEntry("blog", slug);

if (entry === undefined) {
	return Astro.redirect("/404");
}

const { Content } = await entry.render();
console.log(entry);
---

<Layout title={entry.data.title}>
	<section class="container mx-auto max-w-screen-lg mt-10 px-8">
		<a
			href="/articles"
			class="inline-block bg-green-100 p-2 mb-6 hover:bg-green-500 hover:text-white"
			>Back To Articles</a
		>
		<article>
			<h1 class="text-4xl font-bold mb-2">
				{entry.data.title}
			</h1>
			<h3 class="text-lg mb-2">
				Written by {entry.data.author} on {
					formartDate(entry.data.publishedDate)
				}
			</h3>
			<TagListColor tags={entry.data.tags} />
			<Image
				src={entry.data.image}
				alt="Article Image"
				class="w-full h-auto rounded-xl my-6"
			/>
			<p class="text-end italic">
				Photo by
				<a
					class="text-green-600 underline"
					href={entry.data.imageUrl}
					target="_blank"
					rel="nofollow"
				>
					{entry.data.photographer}
				</a>
			</p>

			<Prose>
				<Content />
			</Prose>
			<!-- <Content /> -->
		</article>
	</section>
</Layout>
