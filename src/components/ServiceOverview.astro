---
import { SERVICE_DESCRIPTION, SERVICE_TITLE } from "../data/constants";
import { getCollection, type CollectionEntry } from "astro:content";
import ServiceListCard from "./Cards/ServiceListCard.astro";

const serviceCategories: CollectionEntry<"servicelist">[] =
	await getCollection("servicelist");
---

<section class="bg-white py-24 sm:py-32 dark:bg-gray-900">
	<div class="px-4 mx-auto max-w-screen-xl">
		<div class="max-w-screen-md mb-8 lg:mb-16">
			<h2
				class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
			>
				{SERVICE_TITLE}
			</h2>
			<p class="font-light text-gray-500 dark:text-gray-400 sm:text-xl">
				{SERVICE_DESCRIPTION}
			</p>
		</div>
		<div
			class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-8 xl:gap-12 md:space-y-0"
		>
			{
				serviceCategories.map((category) => (
					<ServiceListCard serviceCatergory={category} />
				))
			}
		</div>
	</div>
</section>
