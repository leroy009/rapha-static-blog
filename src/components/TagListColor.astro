---
const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
	{
		tags.map((tag: string, index: number) => (
			<span
				class:list={[
					index % 2 === 0 ? " bg-green-500" : "bg-blue-500",
					"px-2 py-1 text-white rounded-full text-xs hover:opacity-90",
				]}
			>
				<a class="capitalize " href={"/articles/tag/" + tag}>
					{tag}
				</a>
			</span>
		))
	}
</div>
