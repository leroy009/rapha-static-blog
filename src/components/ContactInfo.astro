---
import { type CollectionEntry, getCollection } from "astro:content";
// import { ADDRESS, SITE_TITLE } from "../data/constants";
import AddressCard from "../components/Cards/AddressCard.astro";
import IntroServiceCard from "./Cards/IntroServiceCard.astro";

const allIntroService: CollectionEntry<"introservices">[] =
	await getCollection("introservices");

const allContacts: CollectionEntry<"contact">[] =
	await getCollection("contact");
---

<section class="bg-white dark:bg-gray-900">
	<div class="max-w-screen-xl px-4 py-8 mx-auto lg:px-6 sm:py-16 lg:py-24">
		<div class="mx-auto max-w-2xl lg:max-w-none">
			<dl
				class="grid max-w-xl grid-cols-1 gap-x-8 lg:max-w-none lg:grid-cols-3"
			>
				{
					allIntroService.map((service) => (
						<IntroServiceCard introService={service} />
					))
				}
			</dl>
		</div>
		<div
			class="grid grid-cols-1 gap-6 text-center sm:gap-16 sm:grid-cols-2 lg:grid-cols-3 mt-16 sm:mt-20 lg:mt-24"
		>
			{allContacts.map((contact) => <AddressCard contact={contact} />)}
		</div>
	</div>
</section>
