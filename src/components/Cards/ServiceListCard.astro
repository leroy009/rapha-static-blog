---
import { Icon } from "astro-icon/components";
import { type CollectionEntry } from "astro:content";

const { serviceCatergory } = Astro.props;

interface Props {
	serviceCatergory: CollectionEntry<"servicelist">;
}
---

<div>
	<div
		class="flex justify-center items-center mb-4 w-10 h-10 bg-green-100 rounded dark:bg-green-900 lg:h-16 lg:w-16"
	>
		<Icon
			name={serviceCatergory.data.icon}
			class="w-5 h-5 text-green-600 dark:text-green-300 lg:w-8 lg:h-8"
		/>
	</div>
	<h3 class="mb-2 text-xl font-bold dark:text-white text-green-900">
		{serviceCatergory.data.category}
	</h3>
	<ul role="list" class="my-6 lg:mb-0 space-y-4">
		{
			serviceCatergory.data.list.map((item) => (
				<li class="flex space-x-2.5">
					<Icon
						name="mdi:tick-circle"
						class="flex-shrink-0 w-5 h-5 text-green-600 dark:text-green-500"
					/>
					<span class="leading-tight text-green-500 dark:text-green-400">
						{item}
					</span>
				</li>
			))
		}
	</ul>
</div>
