---
import { Image } from "astro:assets";
import { type CollectionEntry } from "astro:content";

const { member } = Astro.props;

interface Props {
	member: CollectionEntry<"team">;
}

// const modalId = `${member.id}-modal`;
---

<div
	class="bg-gray-100 rounded-lg border border-green-200 shadow-sm dark:bg-green-800 dark:border-green-700"
>
	<a href="#">
		<Image
			class="p-4 aspect-[3/4] w-full rounded-2xl object-cover overflow-hidden"
			src={member.data.image}
			alt={member.data.name}
			widths={[240, 540, 720]}
		/>
	</a>
	<div class="px-5 pb-5">
		<h3
			class="text-xl font-bold tracking-tight text-green-900 dark:text-green-100"
		>
			<a href="#">{member.data.name}</a>
		</h3>
		<span class="text-green-500">{member.data.role}</span>
		<p
			class="mt-3 mb-4 font-light text-green-500 dark:text-green-400"
			set:html={member.data.profile}
		/>
		<p
			class="mt-3 mb-4 font-light text-green-500 dark:text-green-400"
			set:html={member.data.verse}
		/>
		<ul class="flex space-x-4 sm:mt-0">
			<li>
				<a
					href="#"
					class="text-green-500 hover:text-green-900 dark:hover:text-green-100"
				>
					<svg
						class="w-5 h-5"
						fill="currentColor"
						viewBox="0 0 24 24"
						aria-hidden="true"
						><path
							fill-rule="evenodd"
							d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
							clip-rule="evenodd"></path></svg
					>
				</a>
			</li>
		</ul>
	</div>
</div>
