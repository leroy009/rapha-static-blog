---
import { Image } from "astro:assets";
import natureImage from "../images/pexels-jill-wellington-40192.jpg";
import { CTA_DESCRIPTION, CTA_TITLE } from "../data/constants";
import { Icon } from "astro-icon/components";
---

<section class="bg-white dark:bg-gray-900">
	<div
		class="gap-8 items-center py-24 sm:py-32 px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid md:grid-cols-2"
	>
		<Image class="w-full" src={natureImage} alt="Renewed image" />
		<div class="mt-4 md:mt-0">
			<h2
				class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
			>
				{CTA_TITLE}
			</h2>
			<p class="mb-6 font-light text-gray-500 md:text-lg dark:text-gray-400">
				{CTA_DESCRIPTION}
			</p>
			<a
				href="#"
				class="inline-flex items-center text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:focus:ring-green-900"
			>
				Get started
				<!-- <span aria-hidden="true" class="ml-2 -mr-1 text-lg">â†’</span> -->
				<Icon name="mdi:arrow-right-thin" class="ml-2 -mr-1 w-5 h-5" />
			</a>
		</div>
	</div>
</section>
